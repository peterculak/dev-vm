# vagrant/puppet/modules/nginx/files/127.0.0.1
server {
  listen 81;
  server_name _;
  root /var/www/bento/web;
  index app_dev.php;

  location / {
    try_files $uri /app_dev.php;
  }

  location ~ \.php$ {
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_index app_dev.php;
    include fastcgi_params;
  }
}